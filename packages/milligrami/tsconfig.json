{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "esnext", "dom"
    ],
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src"   
  ]
}